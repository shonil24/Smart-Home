<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="backborder">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
    </style>
    <style name="AppTheme.NoActionBar"> <!--goto manifest file.to set it-->
        <item name="android:windowActionBar">false</item> <!--activity will not have default toolbar-->
        <item name="android:windowNoTitle">true</item> <!--activity's default toolbar will have no label-->
    </style>
    <!--back border for style-->
</resources>
